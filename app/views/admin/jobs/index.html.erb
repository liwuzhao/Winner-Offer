<br>
<div class="col-md-12">
  <div class="dropdown clearfix pull-right btn-group">
    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
      Reorder
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <li><%= link_to("By lower wage",   admin_jobs_path(:order => "by_lower_bound")) %></li>
      <li><%= link_to("By upper wage",   admin_jobs_path(:order => "by_upper_bound")) %></li>
      <li><%= link_to("By resumes",   admin_jobs_path(:order => "by resumes")) %></li>
      <li><%= link_to("By publish time", admin_jobs_path ) %></li>
    </ul>
    <a href = jobs/new , class="btn btn-primary" role="button">Add a job</a>
  </div>

  <table class="table text-center table-striped list">
    <thead class="font">
      <td class="text-left">
        Name
      </td>
      <td>
        Resumes
      </td>
      <td>
        Salary
      </td>
      <td>
        Edit
      </td>
      <td>
        Delete
      </td>
      <td>
        Publish/Hide
      </td>
      <td>
        Created Time
      </td>
    </thead>
    <tbody>
      <%= render :partial => "admin_jobs_item", :collection => @jobs, :as => :job %>
    </tbody>
  </table>

</div>
