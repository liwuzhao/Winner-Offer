<div class="col-md-3"></div>
<div class="container-fluied col-md-5">
    <h2 class="text-center">Add a Job</h2>

    <hr style="width:90px">

    <%= simple_form_for [:admin,@job] do |f| %>
        <%= f.input :title, :placeholder => "", input_html: { class: "form-control"} %>
        <%= f.input :category, :collection => ["开发","医护", "销售", "法律", "人力资源", "设计", "其他"], :selected => "开发" %>
        <%= f.input :description, input_html: { class: "form-control"},:label => "岗位需求" %>
        <%= f.input :wage_lower_bound, :label => "最低工资" %>
        <%= f.input :wage_upper_bound, :label => "最高工资" %>
        <%= f.input :company, :label => "公司名臣" %>
        <%= f.input :location, :label => "城市" %>
        <%= f.input :number, :label => "招聘人数" %>
        <%= f.input :contact_email, :label => "联系邮箱" %>
        <%= f.input :is_hidden, :label => "隐藏" %>
        <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
        <br><br>
    <% end %>

</div>
