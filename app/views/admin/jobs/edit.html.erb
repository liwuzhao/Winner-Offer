<div class="col-md-2"></div>
<div class="container-fluied col-md-4 add_job">
    <h2 style="margin-left:270px;">Edit</h2>
    <br>
    <%= simple_form_for [:admin,@job] do |f| %>
        <%= f.input :title, :placeholder => "", input_html: { class: "form-control"} %>
        <%= f.input :category, :collection => ["开发","医护", "销售", "法律", "人力资源", "设计", "其他"], :selected => "开发" %>
        <%= f.input :description, input_html: { class: "form-control add_job_description"},:label => "岗位需求" %>
        <%= f.input :wage_lower_bound, :label => '薪资' do %>
           <%= f.input_field :wage_lower_bound, :as => :string, class: "wage" %> <span class="wage-form"> ~</span>
           <%= f.input_field :wage_upper_bound, :as => :string, class: "wage" %> <span class="wage-form"></span>
        <% end %>
        <%= f.input :company, :label => "公司名称" %>
        <%= f.input :location, :label => "城市" %>
        <%= f.input :number, :label => "招聘人数" %>
        <%= f.input :contact_email, :label => "联系邮箱" %>
        <%= f.input :is_hidden, :label => "隐藏" %>
        <%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submiting..."} %>
        <br><br>
    <% end %>

</div>
