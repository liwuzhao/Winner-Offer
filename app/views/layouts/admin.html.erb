<!DOCTYPE html>
<html>
    <head>
        <title>Winner Offer</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <link rel="shortcut icon" href="/images/logo.png">

    </head>

    <body>
        <div class="container-fluid">
            <div class="row navbar_fix">
              <%= render "common/navbar" %>
            </div>
            <div class="row">
              <%= render "common/flashes" %>
            </div>
            <br>
            <div class="col-md-2 col-xs-12">
              <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                <div class = "button-wrap">
                  <%= link_to admin_jobs_path do%><button class = "rad-button wwt">管理者面板</button><% end %>
                </div>
              </ul>

              <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                <div class = "button-wrap">
                  <%= link_to jobs_path  do%><button class = "rad-button wwt">招聘信息</button><% end %>
                </div>
              </ul>

              <ul class="nav nav-pills nav-stacked" style="max-width: 300px; padding-top:20px;">
                <div class = "button-wrap">
                  <%= link_to new_admin_job_path do%><button class = "rad-button wwt">发表职缺</button><% end %>
                </div>
              </ul>

            </div>



            <div class="col-md-10 col-xs-12">
              <%= yield %>
            </div>

            <div id="sidebar" class="sidebar">
              <ul>
                <li class="backtop"><i class="fa fa-arrow-circle-up"></i></li>
                <li class="support">
                  <i class="fa fa-thumbs-o-up"></i>
                  <div class="ewm">
                    <p>
                      如果喜欢本网站<br>
                      <a href="https://fullstack.xinshengdaxue.com/works/304" target="_blank">请帮我投个票</a><br>
                    </p>
                  </div>
                </li>
              </ul>
            </div>

        </div>



        <%= render "common/footer" %>
    </body>
</html>
