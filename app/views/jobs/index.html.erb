<br>
<div class="container text-center jos_page_size">

  <div class="page-header">
    <h1 class="text-center" style="font-family:Verdana">Job Lsit</h1>
  </div>
  <div class="dropdown clearfix pull-right">
      <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
        Reorder
        <span class="caret"></span>
      </button>
      <ul class="reorder dropdown-menu ">
        <li><%= link_to("By lower wage", jobs_path(:order => "by_lower_bound")) %></li>
        <li><%= link_to("By upper wage", jobs_path(:order => "by_upper_bound")) %></li>
        <li><%= link_to("By publish time", jobs_path ) %></li>
      </ul>
  </div>

  <br>
  <%= render :partial => "jobs_item", :collection => @jobs, :as => :job %>
  <div class="text-center">
    <%= will_paginate @jobs, renderer: BootstrapPagination::Rails %>
  </div>
</div>
