<br>
<div class="container text-center jos_page_size">

  <div class="page-header">
    <h1 class="text-center" style="font-family:Verdana">Job Lsit</h1>
  </div>
  <div class="dropdown clearfix pull-right">
      <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">
        Reorder
        <span class="caret"></span>
      </button>
      <ul class="reorder dropdown-menu ">
        <li><%= link_to("By lower wage", jobs_path(:order => "by_lower_bound")) %></li>
        <li><%= link_to("By upper wage", jobs_path(:order => "by_upper_bound")) %></li>
        <li><%= link_to("By publish time", jobs_path ) %></li>
      </ul>
  </div>

  <br>
  <div class="col-md-12">
    <% @jobs.each do |job| %>

      <div class="row">

          <div class="col-md-6" style="font-size:20px">
            <p><%= link_to(job.title, job_path(job)) %></p>
          </div>
          <div class="col-md-6">
            <p></p>
          </div>

      </div>
      <div class="row">
          <div class="col-md-2">
              </div>
              <div class="col-md-2">
                <p><i class="fa fa-jpy fa-md" aria-hidden="true"></i>
                <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %></p>
              </div>
              <div class="col-md-4">
                <p><i class="fa fa-address-card-o" aria-hidden="true"></i>  <%= job.category %></p>
              </div>
              <div class="col-md-2">
                <p></p>
              </div>

          </div>
          <div class="row">
              <div class="col-md-2">

              </div>
                <div class="col-md-2">
                  <%= job.company %>
                </div>

                <div class="col-md-4">
                  <i class="fa fa-map-marker fa-md" aria-hidden="true" style="color:rgb(202, 12, 12)" ></i>
                  <%= job.location %>
                </div>

                <div class="col-md-2">
                  <span>
                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                    <%= time_ago_in_words(job.created_at) %> ago
                  </span>
                </div>

          </div>
          <hr>
    <% end %>
  </div>
  <div class="text-center">
     <%= will_paginate @jobs %>
  </div>

</div>
